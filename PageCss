#grad {
  background: green; /* For browsers that do not support gradients */
  background: -webkit-linear-gradient(left, green , MediumSeaGreen); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(right, green , MediumSeaGreen); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(right, green , MediumSeaGreen); /* For Firefox 3.6 to 15 */
  background: linear-gradient(to right, green , MediumSeaGreen); /* Standard syntax */
}

